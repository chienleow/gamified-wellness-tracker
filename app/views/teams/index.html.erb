<%= flash[:message] if flash[:message] %>

<h2>All Teams</h2>

<%= form_tag("/search", method: "post") do %>
  <%= label_tag(:search, "Team Member:") %>
  <%= text_field_tag(:search_username, params[:search_username]) %>
  <%= submit_tag("Search") %>
<% end %><br>

<button type="button" class="btn btn-default"><%= link_to "View Team With The Most Members", most_users_path %></button><br><br>

<% @teams.each do |team| %>
    <button type="button" class="btn btn-default"><%= link_to team.team_name, team_path(team) %></button><br><br>
    <p><strong>Team Points: <%= team.team_points %></strong></p>
    <p><strong>Team Member(s): <% team.users.each do |user| %></strong></p>
        <li><%= user.username %></li>
    <% end %><br><br>
<% end %>